# Environment Configuration for Startup Platform

# =============================================================================
# SAAS STARTER - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# AUTHENTICATION SERVICE
# =============================================================================
AUTH_SERVICE_URL=http://localhost:8080
# REDIRECT_URL is where OAuth callbacks return to (your app's URL)
REDIRECT_URL=http://localhost:3000

# =============================================================================
# DATABASE
# =============================================================================
DB_URL=postgresql://user:password@localhost:5432/dbname?sslmode=disable

# =============================================================================
# PAYMENT MICROSERVICE
# =============================================================================
PAYMENT_MS_URL=http://localhost:9000
PAYMENT_MS_API_KEY=your-payment-ms-api-key-here

# Stripe Product/Price IDs (generated during setup)
# Run ./scripts/setup-products.sh to auto-populate these
STRIPE_PRODUCT_PRO=prod_REPLACE_AFTER_SETUP
STRIPE_PRICE_MONTHLY=price_REPLACE_AFTER_SETUP
STRIPE_PRICE_YEARLY=price_REPLACE_AFTER_SETUP

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
PORT=3000
SESSION_SECRET=change-this-to-a-random-secret-in-production
LOG_LEVEL=info
LOG_FORMAT=json

# Optional: CORS settings
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,https://yourdomain.comst:8081

# Session Configuration
SESSION_TIMEOUT=3600
COOKIE_SECURE=false
COOKIE_HTTPONLY=true
